<Window x:Class="BlackJackProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJackProject"
        mc:Ignorable="d"
        Title="The world's coolest BlackJack Game" Height="450" Width="800">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="D:\Sheridan CST-SDNE\Semester 4\PROG32356 .Net Technologies using C#\Projects\BlackJackProject\BlackJackProject\card_images\Board.jpg"/>
        </Grid.Background>

        <WrapPanel Name="DealerPanel" VerticalAlignment="Top" HorizontalAlignment="Center" Height="180" Background="LightGray" Margin="10"></WrapPanel>
        
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Hit" HorizontalAlignment="Center" Margin="10"  Height="50" Width="100" Click="Hit_Click"/>
            <Button Content="Stand" HorizontalAlignment="Center" Margin="10"  Height="50" Width="100" Click="Stand_Click"/>
        </WrapPanel>

        <WrapPanel Name="PlayerPanel" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="AliceBlue" Height="180" Margin="10"></WrapPanel>

    </Grid>

</Window>
